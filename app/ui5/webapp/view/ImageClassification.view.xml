<core:View 
    xmlns:m="sap.m" 
    xmlns:core="sap.ui.core"
    xmlns:u="sap.ui.unified" 
    controllerName="sap.mlf.timeverde.controller.ImageClassification">
    <m:Page title="{i18n>appTitle}" showHeader="true">
        <m:FlexBox 
            id="flexBoxHint" 
            width="100%" 
            visible="false" 
            alignItems="Center" 
            justifyContent="Center">
            
            <m:Title 
                level="H3" 
                text="{i18n>error}" 
                class="imageErrorTitle " />

            <m:Text 
                width="100%" 
                text="{i18n>msgUploadImage}">
            </m:Text>
        </m:FlexBox>

        <m:FlexBox 
                id="uploadBox" 
                class="workListBox" 
                alignItems="Center" 
                justifyContent="Center" 
                width="100%" 
                height="100%" 
                visible="true">
                <u:FileUploader 
                    id="fileUploader" 
                    name="myFileUpload" 
                    tooltip="Upload any image" 
                    typeMissmatch="handleTypeMissmatch" 
                    class="fileUploaderStyle" 
                    buttonOnly="true" 
                    change="handleValueChange" 
                    fileType="jpg,jpeg,png" 
                    placeholder="Choose a file for Upload..." 
                    buttonText="Browse" 
                    style="Transparent" 
                    icon="sap-icon://camera" 
                    iconOnly="true">
                </u:FileUploader>
                <m:FlexBox 
                    id="vBoxImage" 
                    width="100%" 
                    visible="false" 
                    alignItems="Center" 
                    justifyContent="Center">
                    <m:items>
                        <m:Image src="{/image}" densityAware="false" class="imagevh"></m:Image>
                    </m:items>
                </m:FlexBox>
            </m:FlexBox>
            <m:Table 
                    id="table" 
                    visible="false" 
                    width="auto" 
                    items="{path: '/results'}">
                <m:items>
                    <m:ColumnListItem></m:ColumnListItem>
                </m:items>
            </m:Table>
    </m:Page>
</core:View>